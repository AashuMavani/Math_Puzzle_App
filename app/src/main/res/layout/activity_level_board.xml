<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Level_board_Activity"
    android:background="@drawable/gameplaybackground"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <ImageView
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/skip" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="20dp"
            android:background="@drawable/level_board">
            <TextView
                android:id="@+id/level_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="LEVEL 1"
                android:gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/hint"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/game_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/p1"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.8"
        android:background="@color/black"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/ans_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:textColor="@color/black"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/delete"/>
           <TextView
               android:id="@+id/submit"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1.8"
               android:background="@drawable/button"
               android:text="SUBMIT"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:textSize="18dp"
               android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/n1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="10dp"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:id="@+id/n2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="2"
                android:textColor="@color/white"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/n3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="3"
                android:textColor="@color/white"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/n4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="4"
                android:textColor="@color/white"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/n5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="5"
                android:textColor="@color/white"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/n6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="6"
                android:textColor="@color/white"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/n7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="7"
                android:textColor="@color/white"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/n8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="8"
                android:textColor="@color/white"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/n9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="9"
                android:textColor="@color/white"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/n0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="0"
                android:textColor="@color/white"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>